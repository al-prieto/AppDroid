<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">


<LinearLayout

android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:orientation="vertical"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:gravity="center_vertical">

    <Button
        android:id="@+id/btnPoi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_poi1"
        android:drawableLeft="@mipmap/ic_poi1_foreground"
        android:text="Statue of Liberty"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="18dp"/>


    <Button
        android:id="@+id/btnPoi2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_poi2"
        android:drawableLeft="@mipmap/ic_poi2_foreground"
        android:text="Museum Madame Tussauds"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnPoi3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_poi3"
        android:drawableLeft="@mipmap/ic_poi3_foreground"
        android:text="One World Observatory"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnPoi4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_poi4"
        android:drawableLeft="@mipmap/ic_poi4_foreground"
        android:text="911 museum"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="18dp" />


    <Button
        android:id="@+id/btnPoi5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/custom_button_poi5"
        android:drawableLeft="@mipmap/ic_poi5_foreground"
        android:text="Edge"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="18dp" />


</LinearLayout>
</ScrollView>